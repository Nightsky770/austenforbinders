\newcommand{\oldmoney}[3]{%
  \ifnum#1>0
    {\pounds}#1%
    \ifnum#2>0\,#2\textit{s}.\fi
    \ifnum#3>0\,#3\textit{d}.\fi
  \else
    \ifnum#2>0
      #2\textit{s}.%
      \ifnum#3>0\,#3\textit{d}.\fi
    \else
      \ifnum#3>0
        #3\textit{d}.%
      \else
        0\textit{d}.%
      \fi
    \fi
  \fi
}

